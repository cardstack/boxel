{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nx/s3-cache:s3",
      "options": {
        "cacheableOperations": ["build"],
        "accessKey": "${NX_S3_ACCESS_KEY}",
        "secretKey": "${NX_S3_SECRET_KEY}",
        "bucket": "${NX_S3_BUCKET}",
        "region": "${NX_S3_REGION}"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    }
  },
  "namedInputs": {
    "production": [
      "{projectRoot}/rollup.config.mjs",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/src/**/*",
      "{projectRoot}/bin/**/*",
      "{projectRoot}/package.json",
      "!{projectRoot}/**/*.spec.ts"
    ]
  }
}
