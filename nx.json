{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    }
  },
  "namedInputs": {
    "production": [
      "{projectRoot}/rollup.config.mjs",
      "{projectRoot}/tsconfig.json",
      "{projectRoot}/src/**/*",
      "{projectRoot}/bin/**/*",
      "{projectRoot}/package.json",
      "!{projectRoot}/**/*.spec.ts"
    ]
  }
}
