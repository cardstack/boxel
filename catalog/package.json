{
  "name": "boxel-cli",
  "version": "1.0.0",
  "description": "CLI for bidirectional sync between local directories and Boxel workspaces",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "boxel": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "boxel",
    "cardstack",
    "workspace",
    "sync",
    "cli",
    "bidirectional"
  ],
  "author": "Cardstack Foundation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cardstack/boxel-cli.git"
  },
  "bugs": {
    "url": "https://github.com/cardstack/boxel-cli/issues"
  },
  "homepage": "https://github.com/cardstack/boxel-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^5.2.0",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "ignore": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
