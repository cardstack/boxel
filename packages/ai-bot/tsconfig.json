{
  "compilerOptions": {
    "target": "es2023",
    "allowJs": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "https://cardstack.com/base/*": ["../base/*"],
      "@cardstack/boxel-ui": ["../boxel-ui/addon"],
      "@cardstack/boxel-ui/*": ["../boxel-ui/addon/*"],
      "@cardstack/host/*": ["../host/app/*"],
      "@cardstack/boxel-host/commands/*": ["../host/app/commands/*"],
      "@cardstack/catalog/*": ["../catalog-realm/catalog-app/*"],
      "*": ["types/*", "../host/types/*"]
    }
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"],
    "transform": {
      "include": ["../base/**", "./**", "../boxel-ui/addon/**"]
    }
  },
  "include": [
    "../base/**/*",
    "./**/*",
    "../runtime-common/types/*",
    "../host/types/**/*"
  ],
  "exclude": ["../base/**/__boxel/**"]
}
