{
  "compilerOptions": {
    "target": "es2023",
    "lib": ["es2023", "dom"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["@cardstack/local-types"]
  },
  "include": ["./**/*"]
}
