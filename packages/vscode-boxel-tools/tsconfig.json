{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "Node16",
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "outDir": "out",
    "baseUrl": ".",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "https://cardstack.com/base/*": ["../base/*"],
      "@cardstack/runtime-common/*": ["../runtime-common/*"],
      "babel-plugin-ember-template-compilation": [
        "node_modules/babel-plugin-ember-template-compilation/*"
      ],
      "@cardstack/host/*": ["../host/app/*"],
      "@cardstack/boxel-host/commands/*": ["../host/app/commands/*"],
      "@cardstack/catalog/*": ["../catalog-realm/catalog-app/*"],
      "*": ["types/*", "../host/types/*"]
    }
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "include": [
    "../base/**/*",
    "./src/**/*",
    "../runtime-common/**/*",
    "../host/types/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test"]
}
