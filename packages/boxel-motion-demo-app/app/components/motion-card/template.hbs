{{! template-lint-disable no-invalid-interactive}}
<div
  {{on "click" this.handleClick}}
  local-class="card"
  {{sprite id=@identifier role="card"}}
  ...attributes
>
  {{#if (has-block)}}
    <div
      local-class="content"
      {{sprite role="card-content" id=(concat @identifier "-content")}}
    >
      {{yield}}
    </div>
  {{/if}}

  <footer local-class="footer"></footer>
</div>