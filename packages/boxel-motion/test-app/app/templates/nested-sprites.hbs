<div class="page">
  <button
    type="button"
    {{on "click" (fn (mut this.moveOuter) (not this.moveOuter))}}
  >Move Outer</button>
  <button
    type="button"
    {{on "click" (fn (mut this.moveInner) (not this.moveInner))}}
  >Move Inner</button>

  <AnimationContext @use={{this.transition}} class="context">
    <div
      {{sprite id="outer"}}
      class="outer {{if this.moveOuter 'right'}}"
    >
      Outer Sprite
      <AnimationContext @use={{this.transition}} class="context">
        <div
          {{sprite id="inner"}}
          class="inner {{if this.moveInner 'right'}}"
        >Inner Sprite</div>
      </AnimationContext>
    </div>
  </AnimationContext>

  <AnimationContext @use={{this.transition}} class="context">
    <div
      {{sprite id="outer-no-context"}}
      class="outer {{if this.moveOuter 'right'}}"
    >
      Outer Sprite
      <div
        {{sprite id="inner-no-context"}}
        class="inner {{if this.moveInner 'right'}}"
      >Inner Sprite</div>
    </div>
  </AnimationContext>
</div>