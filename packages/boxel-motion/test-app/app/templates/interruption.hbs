{{! template-lint-disable no-inline-styles }}
<div class="my-20 w-full mx-auto px-4">
  <div class="text-center mx-auto">
    <h2 class="text-4xl font-semibold leading-tight">
      Transitions can be interrupted
    </h2>
    <p class="mt-4 text-lg">
      Click one of the four targets to initiate a transition of the circle to
      the target.
    </p>

    <p class="text-lg mt-16 mb-8">1 ball sprite</p>
    <AnimationContext @use={{this.transition}}>
      <div class="grid">
        {{#each this.ballIds as |id|}}
          <div class="bg-grey-lightest relative h-64 w-64">
            <button
              type="button"
              class="absolute rounded-full w-12 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              style="top: 0; left: 0"
              {{on "click" (fn (mut this.ballGoWhere) "A")}}
              {{on-key-mod "a"}}
            >
              A
            </button>
            <button
              style="top: 0; right: 0"
              class="absolute rounded-full w-12 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "B")}}
              {{on-key-mod "b"}}
            >
              B
            </button>
            <button
              style="bottom: 0; left: 0"
              class="absolute rounded-full w-12 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "C")}}
              {{on-key-mod "c"}}
            >
              C
            </button>
            <button
              style="bottom: 0; right: 0"
              class="absolute rounded-full w-12 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "D")}}
              {{on-key-mod "d"}}
            >
              D
            </button>
            <div
              {{sprite id=(concat "single-ball-" id)}}
              class="absolute rounded-full bg-red w-10 h-10 opacity-75 z-10 ball-position-{{this.ballGoWhere}}"
            ></div>
          </div>
        {{/each}}
      </div>
    </AnimationContext>

    <p class="text-lg mt-16">4 ball sprites</p>
    <AnimationContext @use={{this.transition}} class="mt-8">
      <div class="grid">
        {{#each this.ballIds as |id|}}
          <div class="bg-grey-lightest relative h-64 w-64">
            <button
              type="button"
              class="absolute rounded-full w-12 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              style="top: 0; left: 0"
              {{on "click" (fn (mut this.ballGoWhere) "A")}}
              {{on-key-mod "a"}}
            >
              {{#if (eq this.ballGoWhere "A")}}
                <div
                  {{sprite id=(concat "multi-ball-" id)}}
                  class="absolute pin rounded-full bg-red w-full h-full opacity-75 z-10 ball"
                ></div>
              {{/if}}
              A
            </button>
            <button
              style="top: 0; right: 0"
              class="absolute rounded-full w-24 h-24 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "B")}}
              {{on-key-mod "b"}}
            >
              {{#if (eq this.ballGoWhere "B")}}
                <div
                  {{sprite id=(concat "multi-ball-" id)}}
                  class="absolute pin rounded-full bg-blue w-full h-full opacity-75 z-10 ball border-8 border-red"
                ></div>
              {{/if}}
              B
            </button>
            <button
              style="bottom: 0; left: 0"
              class="absolute rounded-full w-24 h-12 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "C")}}
              {{on-key-mod "c"}}
            >
              {{#if (eq this.ballGoWhere "C")}}
                <div
                  {{sprite id=(concat "multi-ball-" id)}}
                  class="absolute pin rounded-full bg-yellow w-full h-full opacity-75 z-10 ball border-4 border-blue"
                ></div>
              {{/if}}
              C
            </button>
            <button
              style="bottom: 0; right: 0"
              class="absolute rounded-full w-12 h-24 border-2 p-2 cursor-pointer focus:outline-none focus:shadow-outline"
              type="button"
              {{on "click" (fn (mut this.ballGoWhere) "D")}}
              {{on-key-mod "d"}}
            >
              {{#if (eq this.ballGoWhere "D")}}
                <div
                  {{sprite id=(concat "multi-ball-" id)}}
                  class="absolute pin rounded-full bg-green w-full h-full opacity-75 z-10 ball border-2 border-yellow"
                ></div>
              {{/if}}
              D
            </button>
          </div>
        {{/each}}
      </div>
    </AnimationContext>
  </div>
</div>