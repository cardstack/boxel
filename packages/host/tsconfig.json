{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es2022",
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@cardstack/host/tests/*": ["tests/*"],
      "@cardstack/host/*": ["app/*"],
      "https://cardstack.com/base/*": ["../base/*"],
      "*": ["types/*"],
      "@cardstack/boxel-ui": ["../boxel-ui/addon"],
      "@cardstack/boxel-ui/*": ["../boxel-ui/addon/*"]
    },
    "typeRoots": ["../boxel-ui/types"]
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"],
    "transform": {
      "include": [
        "../drafts-realm/**",
        "../published-realm/**",
        "../base/**",
        "../boxel-ui/addon/**",
        "app/**",
        "tests/**"
      ]
    }
  },
  "include": [
    "../base/**/*",
    "../drafts-realm/**/*",
    "../published-realm/**/*",
    "../boxel-ui/addon/*",
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "exclude": ["../base/__boxel/**/*"]
}
