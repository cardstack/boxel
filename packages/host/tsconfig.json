{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "module": "es2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@cardstack/host/tests/*": ["tests/*"],
      "@cardstack/host/*": ["app/*"],
      "@cardstack/boxel-host/commands/*": ["app/commands/*"],
      "https://cardstack.com/base/*": ["../base/*"],
      "@cardstack/catalog/*": ["../catalog-realm/catalog-app/*"],
      "*": ["types/*"]
    },
    "types": ["@cardstack/local-types","@cardstack/local-types/matrix-js-sdk"]
  },
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "include": [
    "../base/**/*",
    "../experiments-realm/**/*",
    "../catalog-realm/**/*",
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ],
  "exclude": ["../base/**/__boxel/**"]
}
